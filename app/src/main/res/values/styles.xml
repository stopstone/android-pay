<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/AppTextTitle.S18</item>
    </style>

    <style name="AppToolbar.Navigation">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="AppBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetModal</item>
    </style>

    <style name="AppBottomSheetModal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="bottomSheetStyle">@android:color/transparent</item>
    </style>

    <style name="AppEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingEnd">11dp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:background">@drawable/selector_input_text_background</item>
        <item name="android:textColorHint">@color/gray_200</item>
    </style>

    <style name="AppButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/AppTextOnPrimary.S16.Bold</item>
        <item name="android:background">@drawable/selector_button_background</item>
    </style>

    <style name="AppButtonOnPrimary">
        <item name="android:textAppearance">@style/AppTextOnPrimary.S14</item>
        <item name="android:background">@drawable/background_button_on_primary</item>
    </style>

    <style name="AppButtonKeyPad" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_keypad_background</item>
    </style>

    <style name="AppButtonCancel" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/AppTextHint.Bold.S16</item>
        <item name="android:background">@drawable/background_gray150</item>
    </style>

    <style name="AppButtonKeyPad.Text">
        <item name="android:textAppearance">@style/AppTextTitle.S20</item>
    </style>

    <style name="AppRoundedImage">
        <item name="cornerSize">13dp</item>
    </style>

    <style name="AppTextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="AppTextTitle.S40">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppTextTitle.S24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTextTitle.S20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTextTitle.S18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTextTitle.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextHint">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="AppTextHint.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextHint.Bold.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextHint.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextCaption">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="AppTextCaption.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextCaption.S12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTextPrimary">
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextPrimary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextOnPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTextOnPrimary.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextOnPrimary.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextOnPrimary.S24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTextOnPrimary.S14.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextOnPrimary.S16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextOnPrimary.S24.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextPlaceHolder">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_150</item>
    </style>

    <style name="AppTextPlaceHolder.S40">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppTextBody">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="AppTextBody.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextBody.S18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTextBody.S20">
        <item name="android:textSize">20sp</item>
    </style>
</resources>